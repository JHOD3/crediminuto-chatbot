doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="https://pro.fontawesome.com/releases/v5.0.10/css/all.css")
        link(rel="stylesheet", href="css/chatbot.css")
        title ChatBoT Crediminuto
    body

        div.position-absolute.chatbot
            //-.card.col-md-6.ml-auto.mr-md-5.mb-md-5.px-0
                .card-header
                    | Featured
                .card-body
                    h5.card-title Special title treatment
                    p.card-text With supporting text below as a natural lead-in to additional content.
                    a.btn.btn-primary(href='#') Go somewhere -//
            #chatbot-card(style="display:none;").card.chat-room.small-chat.wide.mr-md-5.mb-md-6.px-0.position-absolute.border-radius-header-footer-chatbot.border-0.bg-chatbot.conditionalClose
                .py-2.px-3
                    #toggle.card-header.d-flex.justify-content-between.py-0.border-radius-header-chatbot.border-bottom.bg-chatbot(style='cursor: pointer;')
                        .heading.d-flex.justify-content-start
                            .profile-photo.align-items-center.d-flex
                                img.avatar.mr-2.ml-0(src='img/globo-top-chat.svg' alt='avatar')
                            .data.align-items-center.d-flex
                                p.name.mb-0
                                    strong Chat Online
                        .icons.grey-text.align-items-center.d-flex
                            a#closed
                                i.fal.fa-chevron-down.text-danger
                #message.my-custom-scrollbar.bg-chatbot
                    .card-body.p-3
                        .chat-message
                .card-footer.text-muted.pt-1.pb-2.px-3.border-radius-footer-chatbot.border-top-0.bg-chatbot
                    .d-flex.mb-md-3
                        input.border-radius-header-footer-chatbot.form-control.px-md-3.pl-3.pr-5#input-send(type='text' placeholder='Escribe aqui...')
                        div.position-absolute.chatbot-btn-send
                            a#btn-send(href="").text-muted
                                i.fal.fa-paper-plane
                        div.align-items-center.d-flex.ml-2
                            a
                                i.fas.fa-paperclip.mr-2
            .globo-flotante.ml-auto.position-absolute.d-block
                a(href="").deploy-chatbot
                    img(src="img/globo-flotante.svg")

        footer
            script(src="js/jquery-3.4.1.min.js")
            script(src="js/bootstrap.min.js")
            script(src="js/script.js")